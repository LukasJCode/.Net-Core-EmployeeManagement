@model IEnumerable<Employee>

@{ 
    ViewBag.Title = "Employee List";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-deck">
            @foreach (var Employee in Model)
            {
                var photoPath = "~/Images/" + (Employee.PhotoPath ?? "imagenotfound.jpg");

                <div class="col-sm-5" style="display:inline-block">
                    <div class="card m-3">
                        <div class="card-header">
                            <h3 class="text-center">@Employee.Name</h3>
                        </div>
                        <img class="card-img-top" src=@photoPath alt="Alternate Text" asp-append-version="true" />
                        <div class="card-footer text-center">
                            <a asp-controller="home" asp-action="details" asp-route-id="@Employee.Id" class="btn btn-primary">View</a>
                            <a href="#" class="btn btn-primary">Edit</a>
                            <a href="#" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
