@model IEnumerable<Employee>

@{ 
    ViewBag.Title = "Employee List";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        <div class="card" style="min-width:25rem; max-width:31%; display:inline-block">
            <div class="card-header text-center">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top" src="~/images/imagenotfound.jpg" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" 
                   class="btn btn-primary m-1">View</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
